{
  "name": "instagram-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node build/index.js",
    "migrate": "node-pg-migrate -m src/migrations",
    "migrate:up": "node-pg-migrate up",
    "back:copy-assets": "npx copyfiles src/assets/**/* build/ --up 1 --exclude \"**/*.ts\"",
    "build": "tsc -p src || true && npm run back:copy-assets",
    "back:dev": "npm run build && concurrently -n \"JS,TS\" -c \"yellow,cyan\" \"npm run back:watch:server\" \"npm run back:watch:typescript\"",
    "back:watch:server": "export TZ=UTC && npx nodemon build/index.js --watch src --watch .env --delay 1",
    "back:watch:typescript": "tsc -p server --preserveWatchOutput --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.4",
    "express": "^4.18.2",
    "node-pg-migrate": "^6.2.2",
    "objection": "^3.1.4",
    "pg": "^8.11.3",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.11.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3"
  }
}
